<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <a class="navbar-brand" href="{{path('homepage')}}">Symbnb</a>
   
    
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{path('admin_dashboard')}}">Dashboard</a>
    {% endif %}
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="">
                <a class="nav-link" href="{{path('homepage')}}">Accueil </a>
            </li>
            <li class="">
                <a class="nav-link" href="{{path('ads_index')}}">Annonces </a>
            </li>
        </ul>
        
        <ul class="navbar-nav ml-auto">
            {% if app.user %}
            <div class="dropdown">
                <button class="btn btn-dark dropdown-toggle btn-sm" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img src="{{ app.user.picture }}" alt="{{ app.user.slug }}" class="rounded-circle user-avatar-nav" > {{app.user.firstName}}
                </button>
                <div class="dropdown-menu dropdown-menu-right dropdown-account" aria-labelledby="dropdownMenuButton ">
                    <a class="dropdown-item" href="{{ path('account_index') }}"><i class="fas fa-user-circle"></i> Mon compte</a>
                    <a class="dropdown-item" href="{{ path('ads_create') }}"><i class="fas fa-list-alt"></i> Créer une annonce</a>
                    <a class="dropdown-item" href="{{ path('account_bookings') }}"><i class="fas fa-book"></i> Mes réservations</a>
                    <a class="dropdown-item" href="{{ path('account_profile') }}"><i class="fas fa-info-circle"></i> Modifier mes informations</a>
                    <a class="dropdown-item" href="{{ path('account_update_password') }}"><i class="fas fa-key"></i> Changer de mot de passe</a>
                    
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path('account_logout') }}"><i class="fas fa-times-circle"></i> Logout</a>
                </div>
            </div>
            {% else %}
                <li class="nav-item">
                    <a href="{{ path('account_register') }}">Inscription</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('account_login') }}">Connexion</a>
                </li>
            {% endif %}
            
        </ul>
        
    </div>
</nav>

{% for label, messages in app.flashes %}
    <div class="container">
        <div class="alert alert-{{label}}">
            {% for message in messages %}
                <p>{{ message | raw }}</p>
            {% endfor %}
        </div>
    </div>
{% endfor %}
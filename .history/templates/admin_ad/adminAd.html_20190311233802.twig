{% extends 'admin_ad/base.html.twig' %}

{% block body %}
<div class="col-md-9 col-lg-10 p-0">
    <div class="jumbotron jumbotron-fluid pt-4 pb-4">
        <div class="container">
            <h1 class="display-4">gestion des annonces</h1>
            <p class="lead">Espace de gestion des annonces.</p>
        </div>
    </div>
    <div class="container">
        <h3>Liste des annonces</h3>
        <table class="table table-striped table-dark m-4">

{% extends 'admin_ad/base.html.twig' %}

{% block body %}
<div class="col-md-9 col-lg-10 p-0">
    <div class="jumbotron jumbotron-fluid pt-4 pb-4">
        <div class="container">
            <h1 class="display-4">gestion des commentaire</h1>
            <p class="lead">Espace de gestion des commentaire.</p>
        </div>
    </div>
    <div class="container">
        <h3>Liste des commentaires</h3>
        <table class="table table-striped m-4">
                <thead>
                  <tr>
                    <th scope="col">Content</th>
                    <th scope="col">Auteur</th>
                    <th scope="col">Annonce</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                    {% for comment in comments %}
                    <tr>
                    <th>{{comment.content}}</th>
                    <td><a href="{{ path('admin_user_ads', {'id': comment.author.id}) }}">{{comment.author.firstName}}</a></th>
                    <td><a href="">{{comment.ad.title}}</a></th>
                    <td>
                        <div class="btn-group">
                            <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="{{ path('admin_comment_edit', {'id': comment.id}) }} ">Modidier</a>
                                <a class="dropdown-item" href="">Supprimer</a>
                            </div>
                        </div>
                    </td>
                    </tr>
                    {% endfor %}
                </tbody>
        </table>
    </div>
</div>
{% endblock %}
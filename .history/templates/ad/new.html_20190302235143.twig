{% extends 'base.html.twig' %}

{% block title %}Création d'une annone{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container">
        <h1>Création d'une annonce</h1>

        {{ form_start(form)}}

        {{form_widget(form)}}

        <button class="btn btn-primary" type="submit">Créer une annonce</button>

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block _ads_images_entry_row %}
 {{ form_widget(form) }}
{% endblock %}

{% block _ads_images_widget %}
    <p>Ajouter vos propres images</p>
    {{ form_widget(form) }}
    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary">Ajouter une image</button>
    </div>
{% endblock %}

{% block _ads_images_entry_widget %}
    <div class="form-group">
        <div class="row">
            <div class="col">{{ form_widget(form.url) }}</div>
            <div class="col">{{ form_widget(form.caption) }}</div>
        </div>
    </div>
{% endblock %}
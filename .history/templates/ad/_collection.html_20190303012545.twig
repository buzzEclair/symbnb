
{% block _ads_images_widget %}
<p>Ajouter d'autre image du logement</p>
{{ form_widget(form) }}

<input type="hidden" id="widgets-counter" value="0">

<div class="form-group">
    <button type="button" id="add-image" class="btn btn-primary  btn-sm">Ajouter une image</button>
</div>
{% endblock %}

{% block _ads_images_entry_row %}
{{ form_widget(form) }}
{% endblock %}

{% block _ads_images_entry_widget %}
<div class="form-group" id="block_{{id}}">
    <div class="row" >
        <div class="col-10">
            <div class="row">
                <div class="col-6">
                    {{ form_widget(form.url) }}
                    {{ form_errors(form.url)}}
                </div>
                <div class="col-6">
                    {{ form_widget(form.caption) }}
                    {{ form_errors(form.caption)}}
                </div>
            </div>
        </div>
        <div class="col-2">
            <button type="button" data-action="delete" data-target="#block_{{id}}" id="btn-delete" class="btn btn-danger btn-sm align-middle">X</button>
        </div>
    </div>
</div>
{% endblock %}

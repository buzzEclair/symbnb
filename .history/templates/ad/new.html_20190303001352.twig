{% extends 'base.html.twig' %}

{% block title %}Création d'une annone{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container">
        <h1>Création d'une annonce</h1>

        {{ form_start(form)}}

        {{form_widget(form)}}

        <button class="btn btn-primary" type="submit">Créer une annonce</button>

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block _ads_images_entry_row %}
 {{ form_widget(form) }}
{% endblock %}

{% block _ads_images_widget %}
    <p>Ajouter d'autre image du logement</p>
    {{ form_widget(form) }}
    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary  btn-sm">Ajouter une image</button>
    </div>
{% endblock %}

{% block _ads_images_entry_widget %}

    <div class="row">
        <div class="col-10">
            <div class="form-group" id="block_{{id}}">
                <div class="row">
                    <div class="col">{{ form_widget(form.url) }}</div>
                    <div class="col">{{ form_widget(form.caption) }}</div>
                </div>
            </div>
        </div>
        <div class="col-2">
            <button type="button" data-action="delete" data-target="#block_{{id}}" id="btn-delete" class="btn btn-danger btn-sm align-middle">X</button>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
    $('#add-image').click(function(){
        const index = $('#ads_images .form-group').length;
        const tmpl = $('#ads_images').data('prototype').replace(/__name__/g, index);
        $('#ads_images').append(tmpl);
    });
</script>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Login!{% endblock %}

{% block body %}
<div class="container">  
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
            <div class="card-body">
                <h5 class="card-title text-center">Sign In</h5>
                <form class="form-signin" action="">
                <div class="form-label-group">
                    <label for="email">Email address</label>

                    <input type="text" class="form-control" name="_username" id="email" placeholder="adresse email" required autofocus>
                </div>

                <div class="form-label-group">
                    <label for="password">Password</label>
                    <input type="password" name="_password" id="password" placeholder="Mot de passe" class="form-control" required >
                
                </div>

                <hr class="my-4">
                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Connexion</button>
                </form>
            </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
